<div class="jumbotron header">
  <div class="container">
    <h1>Find a yacht to rent.</h1>
    <p>Rent from yachts in over 34,000 cities and 192 countries.</p>
    <a href="#">Learn More</a>
  </div>
</div>
<div class="content">
    <div class="container">
        <h2>Neighborhood Yachts</h2>
          <div class="cards">
            <% if @yachts.length != 0 %>
              <% @yachts.each do |yacht| %>
                <% background_image = yacht.photo %>
                <div class="card-trip">
                  <%= image_tag background_image, alt: "background yacht image" %>
                  <div class="card-trip-infos">
                    <div class="card-trip-details">
                      <h2><%= link_to(yacht.name, yacht_path(yacht)) %></h2>
                      <p><%= yacht.model %></p>
                    </div>
                    <h2 class="card-trip-pricing">$<%= yacht.price %></h2>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
    </div>
</div>
